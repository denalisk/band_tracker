@{
    Layout = "Shared/_Layout.cshtml";
}
<div class="my-container row">
    <div class="card col s5 my-box">
        <div class="card green lighten-2 small-object">
            <h4>Bands that match your search: </h4>
        </div>
        <div class="center-align found-bands">
            @if(Model["bands"].Count == 0)
            {
                <h4>
                No bands matched your search
                </h4>
            }
            else
            {
                <ul>
                @foreach(var band in Model["bands"])
                {
                    <li><a href="bands/@band.GetId()"><h4>@band.GetName()</h4></a></li>
                    <hr />
                }
                </ul>
            }
        </div>
    </div>
    <div class="my-box card col s5 offset-s2">
        <div class="card green lighten-2 small-object">
            <h4>Venues that match your search:</h4>
        </div>
        <div class="center-align found-venues">
            @if(Model["venues"].Count == 0)
            {
                <h4>
                No venues matched your search
                </h4>
            }
            else
            {
                <ul>
                @foreach(var venue in Model["venues"])
                {
                    <li><a href="venues/@venue.GetId()"><h4>@venue.GetName()</h4></a></li>
                    <hr />
                }
                </ul>
            }
        </div>
    </div>
</div>
